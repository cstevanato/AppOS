<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40383737" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp" />
        </shape>
    </item>

    <item
        android:bottom="2px"
        android:right="2px">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp" />
        </shape>
    </item>

    <item
        android:bottom="4px"
        android:right="4px">
        <shape android:shape="rectangle">
            <solid android:color="#40080808" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp" />
        </shape>
    </item>
    <item
        android:bottom="6px"
        android:right="6px">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp" />
            <solid android:color="@color/colorBackgroundView" />
        </shape>
    </item>

</layer-list>

